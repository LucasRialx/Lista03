import java.util.*;

class Main {
  public static void main(String[] args) {
    Scanner Entrada = new Scanner(System.in);

    // Declaração de variaveis
double peso, genero;
int c1=0;
int c2=0;    
    //Cria o Loop
    for (int i = 0; i < 10; i++) {

    // Solicita entrada de dados ao usuario  
    System.out.println("Insira a seu peso em KG: ");
    peso = Entrada.nextDouble();
    System.out.println("Informe o genero: \n1 - Masculino \n2 - Feminino ");
    genero = Entrada.nextDouble();

    // Efetua condição para controlar o peso e genero solicitado
      if(genero == 1 && peso >=60 && peso <=80){
      c1++;
        }
      if(genero ==2 && peso >=50 && peso <=70){
      c2++;
        }
      }
    //Imprime para o usuario resultado
    System.out.println("Homens com peso entre 60Kg e 80kg:" +c1+ "\nMulheres com peso entre 50Kg e 70kg:" +c2);
  }
}
